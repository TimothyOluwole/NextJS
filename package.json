{
  "name": "foundation-design-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "cross-env ANALYZE=true pnpm build",
    "build": "next build",
    "clean-all": "pnpm clean-build && pnpm clean-node-modules",
    "clean-build": "rm -rf ./.next",
    "clean-node-modules": "rm -rf ./node_modules",
    "dev": "next dev",
    "format": "prettier --write --ignore-unknown src",
    "lint": "next lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest --watch",
    "test:ci": "jest --ci --colors",
    "test:e2e": "playwright test",
    "type-check": "tsc",
    "update:latest": "pnpm update --latest --interactive"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^2.2.1",
    "@headlessui/react": "^1.7.10",
    "@next/bundle-analyzer": "^13.1.6",
    "@next/font": "^13.1.6",
    "@radix-ui/react-accordion": "^1.1.0",
    "@radix-ui/react-avatar": "^1.0.1",
    "@radix-ui/react-checkbox": "^1.0.1",
    "@radix-ui/react-label": "^2.0.0",
    "@radix-ui/react-radio-group": "^1.1.1",
    "@radix-ui/react-separator": "^1.0.1",
    "@radix-ui/react-tooltip": "^1.0.3",
    "class-variance-authority": "^0.4.0",
    "clsx": "^1.2.1",
    "lucide-react": "^0.113.0",
    "next": "^13.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.9.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-testing-library": "^5.10.1",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "jest-environment-jsdom": "^29.4.2",
    "lint-staged": "^13.1.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.9.5"
  }
}
